// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.2.0",
	"configurations": [
		{
			"preLaunchTask": "Extension Build",
			"name": "Build and Launch Extension",
			"type": "extensionHost",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/release"
			],
			"stopOnEntry": false,
			"request": "launch",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/release/*.js",
				"${workspaceFolder}/out/**/*.js",
				"!**/node_modules/**"
			],
		},
		{
			"preLaunchTask": "Extension Build (dev)",
			"name": "Build (dev) and Launch Extension",
			"type": "extensionHost",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/release"
			],
			"stopOnEntry": false,
			"request": "launch",
			"sourceMaps": true,
			"pauseForSourceMap": true,
			"sourceMapRenames": true,
			"trace": true,
			"outFiles": [
				"${workspaceFolder}/release/*.js",
				"${workspaceFolder}/out/**/*.js",
				"!**/node_modules/**"
			],
		},
		{
			"preLaunchTask": "Watch",
			"name": "Build (watch) and Launch Extension",
			"type": "extensionHost",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/release"
			],
			"stopOnEntry": false,
			"request": "launch",
			"sourceMaps": true,
			"pauseForSourceMap": true,
			"sourceMapRenames": true,
			"trace": true,
			"outFiles": [
				"${workspaceFolder}/release/*.js",
				"${workspaceFolder}/out/**/*.js",
				"!**/node_modules/**"
			],
		},
		{
			"name": "Launch Only",
			"type": "extensionHost",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/release"
			],
			"stopOnEntry": false,
			"request": "launch",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceFolder}/release/*.js",
				"${workspaceFolder}/out/**/*.js",
				"!**/node_modules/**"
			],
		},
	]
}
