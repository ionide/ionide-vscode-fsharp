{
  
  "comments": {
   "lineComment": "//",
   "blockComment": [ "(*", "*)" ]
  },
 
 "autoClosingPairs": [
   ["[", "]"],
   ["(", ")"],
   ["{", "}"],
   ["<@", "@>"],
   ["``", "``"],
   ["\"", "\""],
   ["(|", "|)"],  
   ["[<",">]"],     
   ["[|", "|]"],
   ["(*", "*)" ], 
   ["<@@", "@@>"] 
 ],
    
  "surroundingPairs": [
   ["<@@", "@@>"],
   ["(|", "|)"],
   ["[<",">]"],
   ["[|", "|]"],
   ["{", "}"],
   ["[", "]"],
   ["(", ")"],
   ["\"", "\""],
   ["\"\"\"", "\"\"\""],
   ["(*", "*)"],
   ["<@", "@>"],
   ["'", "'"]
  ],
  
  "brackets": [
   ["(", ")"],
   ["(*", "*)"],
   ["{", "}"],
   ["[", "]"],
   ["[|", "|]"],
   ["<@", "@>"],
   ["<@@", "@@>"]
  ],

  "wordPattern": "((\\w*')(\\w'?)*)|(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\$\\^\\&\\*\\(\\)\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\\/\\s]+)"

}
